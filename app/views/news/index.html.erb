<%= render 'news_tab_control' %>

<h1>News Articles</h1>


<%= will_paginate @news, renderer: BootstrapPagination::Rails %>
<table data-toggle="table" class="table table-fixed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Word count</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body.scan(/\w+/).size %></td>
        <td><%= article.created_at %></td>
        <td><%= article.updated_at %></td>
        <td><%= link_to icon(:search), article %></td>
        <td><%= link_to icon(:edit), edit_news_path(article) %></td>
        <td><%= link_to icon(:trash), article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>